        "lib": ["es2020"],
        "module": "commonjs",
        "target": "es2019",
        "types": ["node"],
        "downlevelIteration": true,
        "resolveJsonModule": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "outDir": "./dist",
        "rootDir": "./src"
    }
}
